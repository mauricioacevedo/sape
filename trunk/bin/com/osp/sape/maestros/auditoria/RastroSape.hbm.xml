<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="com.osp.sape.maestros.auditoria.RastroSape"
        table="rastrossape"
    >

        <id
            name="id"
            column="id"
            type="int"
        >
            <generator class="sequence">
                <param name="sequence">idrastrossape</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-RastroSape.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="descripcion"
            type="string"
            update="true"
            insert="true"
            column="descripcion"
        />

        <property
            name="fecha"
            type="timestamp"
            update="true"
            insert="true"
            column="fecha"
        />

        <property
            name="tipo"
            type="int"
            update="true"
            insert="true"
            column="tipo"
        />

        <property
            name="usuario"
            type="string"
            update="true"
            insert="true"
            column="usuario"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-RastroSape.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
