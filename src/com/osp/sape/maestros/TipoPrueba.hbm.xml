<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="com.osp.sape.maestros.TipoPrueba"
        table="siplexpro_tipopruebas"
    >

        <id
            name="id"
            column="id"
            type="int"
            unsaved-value="-1"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-TipoPrueba.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="tipo"
            type="string"
            update="true"
            insert="true"
            column="tipo"
        />

        <property
            name="descripcion"
            type="string"
            update="true"
            insert="true"
            column="descripcion"
        />

        <property
            name="disponible"
            type="string"
            update="true"
            insert="true"
            column="disponible"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-TipoPrueba.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
